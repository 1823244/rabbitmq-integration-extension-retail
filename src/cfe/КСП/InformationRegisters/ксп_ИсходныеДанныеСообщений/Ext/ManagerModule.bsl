Процедура ДобавитьЗапись(СсылкаНаОбъект, ТекстJson, ВнешняяСистема="") Экспорт
	
	Если НЕ ЗначениеЗаполнено(ТекстJson) Тогда
		Возврат;
	КонецЕсли;
	Если НЕ ЗначениеЗаполнено(СсылкаНаОбъект) Тогда
		Возврат;
	КонецЕсли;
	
	ПериодМс = ТекущаяУниверсальнаяДатаВМиллисекундах();
	НЗ = РегистрыСведений.ксп_ИсходныеДанныеСообщений.СоздатьНаборЗаписей();
	НЗ.Отбор.СсылкаНаОбъект.Установить(СсылкаНаОбъект);
	НЗ.Отбор.ПериодМс.Установить(ПериодМс);
	НЗ.Отбор.ВнешняяСистема.Установить(ВнешняяСистема);
	стрк = НЗ.Добавить();
	стрк.СсылкаНаОбъект = СсылкаНаОбъект;
	стрк.ПериодМс = ПериодМс;
	стрк.ВнешняяСистема = ВнешняяСистема;
	стрк.ТекстJson = ТекстJson;
	стрк.МоментВремениЗаписи = ТекущаяДатаСеанса();
	НЗ.Записать();
		
КонецПроцедуры
